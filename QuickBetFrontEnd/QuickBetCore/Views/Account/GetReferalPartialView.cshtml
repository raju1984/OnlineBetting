
@{
    ViewBag.Title = "GetReferalPartialView";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}


<script>
    $(document).ready(function () {
        LoadReferpartialView()
    });

</script>

<script>
    function LoadReferpartialView() {
        //var detailid = parseInt(rel);
        try {
            $('.load-details').load('/Account/ReferParticalView/');
            $('#exampleModala').modal('show');
        }
        catch (ex) {
            swal({
                title: "error",
                text: ex,
                icon: "error"
            });
        }
    }
    function close() {
       
        $('#exampleModala').modal('hide');
    }

</script>


<div class="modal" id="exampleModala" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"> Shop Addesss</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="load-details"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="close()" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>