<script type="text/javascript">
    $(document).ready(function () {
        loadgamesscratch();
        loadgamesmostwon();
    });
    function loadgamesscratch() {
        Loader(true);
        $.ajax({
            url: '/Home/Getscratchlist',
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            success: function (result) {
                debugger;
                Loader(false);
                $('#divScratchCards').val("")
                $('#divScratchCards').html(result);
            },
            error: function (xhr, status) {
                Loader(false);
                //alert(status);
            }
        })
    }

    function loadgamesmostwon() {
        Loader(true);
        $.ajax({
            url: '/Home/Getmostwon',
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            success: function (result) {
                debugger;
                Loader(false);
                $('#divmostwin').val("")
                $('#divmostwin').html(result);
            },
            error: function (xhr, status) {
                Loader(false);
                //alert(status);
            }
        })
    }
</script>