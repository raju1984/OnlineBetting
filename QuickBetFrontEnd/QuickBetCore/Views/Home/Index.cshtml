@model IEnumerable<QuickBetCore.Models.CarouselViewModel>
@{
    ViewBag.Title = "Best scratch card games in Nigeria for an instant win";
    ViewBag.Description = "Play scratch card games in Nigeria to win exciting rewards and become a millionaire. Quickbet is a licensed website for online scratch card games in Nigeria.";
    ViewBag.Keywords = "scratch card games in Nigeria; card games in Nigeria; online scratch card games in Nigeria.";
    ViewBag.Conical = "https://quickbetng.com/";
}
<style>
    .topdownlaod {
        position: absolute;
        z-index: 999;
        width: 100%;
        text-align: center;
        padding: 10px 0;
    }

    .jackpot-item .title {
        word-break: break-all;
    }



    .online-ticket-section .jackpot-item {
        padding: 0px;
        max-width: 98%;
    }

    #btn_0 .custom-button2 {
        position: absolute;
        left: 45%;
        bottom: 40px;
    }

    #btn_1 .custom-button2 {
        position: absolute;
        right: 20%;
        bottom: 40px;
    }

    #btn_2 .custom-button2 {
        position: absolute;
        right: -1%;
        bottom: 40px;
    }

    #btn_3 .custom-button2 {
        position: absolute;
        left: 45%;
        bottom: 25%;
    }

    .scroll {
        min-height: 80px;
        max-height: 80px;
        overflow-y: auto;
    }

    /* ===== Scrollbar CSS ===== */
    /* Firefox */
    *.scroll {
        scrollbar-width: auto;
        scrollbar-color: #8f54a0 #ffffff;
    }

        /* Chrome, Edge, and Safari */
        * .scroll::-webkit-scrollbar {
            width: 10px;
        }

        *.scroll::-webkit-scrollbar-track {
            background: #ffffff;
        }

        *.scroll::-webkit-scrollbar-thumb {
            background-color: #8f54a0;
            border-radius: 10px;
            border: 3px solid #ffffff;
        }
</style>
<div class="col-lg-12">
    <div class="footer-top-area topdownlaod">
        <div class="left">
            @if (ViewBag.LogoLink != null)
            {
                <a href="@ViewBag.LogoLink.PlaystoreLink">
                    <img src="/assets/images/app_store_btn.png" alt="">
                </a>
                <a href="/Home/QUICKBETV003">
                    <img src="/assets/images/goole_play_btn.png" alt="">
                </a>
            }
        </div>
    </div>
</div>
<div id="demo" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        @if (Model != null && Model.Count() > 0)
        {
            int i = 0;
            foreach (var item in Model)
            {
                if (i == 0)
                {
                    <div class="carousel-item active" id="@("btn_"+i)">
                        <img src="@item.PictureUrl" alt="Los Angeles">
                        <div class="carousel-caption">
                            @*<p class="banner-subtitle">@item.Title </p>*@
                            @*<h1 class="banner-title">
                                    Mega Jackpot
                                </h1>*@
                            @*<p class="text">@item.Description</p>*@
                            @if (item.ButtonName != null && item.ButtonLink != null)
                            {
                                <a href="@item.ButtonLink" target="_blank" class="custom-button2">@item.ButtonName</a>
                            }
                            else
                            {<a href="@Url.Action("Lottery","Home")" class="custom-button2">Start Playing Now</a>

                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item" id="@("btn_"+i)">
                        <img src="@item.PictureUrl" alt="Chicago">
                        <div class="carousel-caption">
                            @*<p class="banner-subtitle">@item.Title </p>*@
                            @*<h1 class="banner-title">
                                    Mega Jackpot
                                </h1>*@
                            @*<p class="text">@item.Description</p>*@
                            @if (item.ButtonName != null && item.ButtonLink != null)
                            {

                                <a href="@item.ButtonLink" target="_blank" class="custom-button2">@item.ButtonName</a>
                            }
                            else
                            {<a href="@Url.Action("Lottery","Home")" class="custom-button2">Start Playing Now</a>

                            }
                        </div>
                    </div>
                }
                i = i + 1;
            }
        }
        else
        {
            <div class="carousel-item active">
                <img src="/assets/images/hero-bg2.png" alt="Los Angeles">
                <div class="carousel-caption">
                    <p class="banner-subtitle">Exclusive Lottery </p>
                    <h1 class="banner-title">
                        Mega Jackpot
                    </h1>
                    <p class="text">Power up for a chance to win in this electrifying instant game!</p>
                    <a href="@Url.Action("Lottery","Home")" class="custom-button2">Start Playing Now</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/assets/images/hero-bg3.png" alt="New York">
                <div class="carousel-caption">
                    <p class="banner-subtitle">Exclusive Lottery </p>
                    <h1 class="banner-title">
                        Mega Jackpot
                    </h1>
                    <p class="text">Power up for a chance to win in this electrifying instant game!</p>
                    <a href="#" class="custom-button2">Start Playing Now</a>
                </div>
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>
