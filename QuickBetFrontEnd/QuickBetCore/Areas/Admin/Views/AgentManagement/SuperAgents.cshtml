@model QuickBetCore.Models.AdminDashboardViewModel
@using QuickBetCore.Models;
@{
    ViewBag.Title = "SuperAgents";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
