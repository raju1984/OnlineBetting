@model QuickBetCore.Models.FundTransferiew

<div class="col-lg-12 padding0">
    <div class="card">
        <div class="card-header no-border">
            <h4 class="card-title">Pending Requests</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>TransactionId</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Remark</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.pending != null && Model.pending.Count() > 0)
                        {
                            foreach (var item in Model.pending)
                            {
                                <tr>
                                    <td>@item.transactionid</td>
                                    <td>₦@item.amount</td>
                                    <td>@item.Transferdate</td>
                                    <td>@item.remark</td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

