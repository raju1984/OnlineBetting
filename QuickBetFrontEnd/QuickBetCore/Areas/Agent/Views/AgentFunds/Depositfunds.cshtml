
@{
    ViewBag.Title = "Deposit funds to account";
    Layout = "~/Areas/Agent/Views/Shared/_Layout.cshtml";
    decimal balacne = 0;
    if (ViewData["balance"] != null)
    {
        var amount = ViewData["balance"].ToString();
        balacne = Convert.ToDecimal(amount);
    }
}

<div class="page-content">
    <div class="page-bar">
        <div class="page-title-breadcrumb">
            <div class="pull-left">
                <div class="page-title">Deposit funds to account</div>
            </div>
            <ol class="breadcrumb page-breadcrumb pull-right">
                <li>
                    <i class="fa fa-home"></i>&nbsp;
                    <a class="parent-item"
                      href="@Url.Action("Index", "Dashboard",new { area="Agent"})">Home</a>
                    &nbsp;<i class="fa fa-angle-right"></i>
                </li>
                <li class="active">Games</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" style="width:100%">
                        Account balance: ₦ @balacne
                    </h4>
                </div>
                <div class="card-body">
                    <div class="col-md-12">
                        <div class="row">
                            <form id="contactForm"
                                  method="GET"
                                  action="/Payment/PaymentMode"
                                  class="log-form">
                                <div class="form-group row">
                                    <label class="col-form-label col-md-12" style="font-size: 18px;">Amount to deposit *</label>
                                    <div class="col-md-12">
                                        <input type="number" name="amount" id="amount" required class="form-control" min="1" placeholder="Enter Amount">
                                    </div>
                                </div>
                                <button type="submit" onclick="return validate()" class="btn-chat">Click to continue</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

